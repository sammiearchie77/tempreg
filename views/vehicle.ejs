<div class="wrapper d-flex align-items-stretch">
  <%- include('./partials/sideNav') %>
    <div id="content" class="p-4 p-md-5 pt-5">
      <h1 class="mt-4">Vehicle Profile</h1>
      <h4 class="lead mb-3">Welcome <%= user.name %>
      </h4>
      <div class="card">
        <h1 class="text-center mb-2">
          <i class="fas fa-car"></i> Vehicle Info
        </h1>
        <div class="row mt-5">
          <div class="col-md-4">
            <div class="user__image mx-4 mt-4">
              <img class="mt-2 rounded" id="output" width="100%"/>
              <!-- <img class=" rounded" src="../static/img/benz.jpg" alt="user-image" srcset="" width="100%"> -->
              <input class="mt-1" type="file" accept="image/*" onchange="loadFile(event)">
              <h3 class="text-center mb-1">Vehicle Image</h3>
            </div>
          </div>
          <div class="col-md-8 m-auto">
            <div class="card-body">
              <form action="/vehicle" method="POST">
                <div class="row">
                  <div class="col-md-6 form-group">
                    <label for="name">Vehicle name</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name"
                      value="Mercedes Benz"/>
                  </div>
                  <div class="col-md-6 form-group">
                    <label for="model">Vehicle Model</label>
                    <input type="text" id="model" name="model" class="form-control" value="AMG 64"/>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="year">Production Year</label>
                      <input type="text" id="" name="year" class="form-control" placeholder="Enter Email"
                        value="2022"/>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="vin">VIN No</label>
                      <input type="text" id="vin" name="vin" class="form-control" placeholder="Enter Email" value="1C4AJWAG6DL591729"
                      />
                    </div>
                  </div>
                </div>
                <div class="d-flex justify-content-between">
                  <button type="submit" class="btn btn-primary mt-3 w-25 font-weight-bolder">
                  Save Car Info
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>