<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register
        </h1>
        <%- include('./partials/messages'); %> 
        <form action="/users/register" method="POST">
         <div class="row">
          <div class="col">
              <div class="form-group">
                <label for="firstname">First name</label>
                <input
                  type="firstname"
                  id="firstname"
                  name="firstname"
                  class="form-control"
                  placeholder="Enter Name"
                  value="<%= typeof firstname != 'undefined' ? firstname : '' %>"
                />
              </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="lastname">Last name</label>
              <input
                type="lastname"
                id="lastname"
                name="lastname"
                class="form-control"
                placeholder="Enter Name"
                value="<%= typeof lastname != 'undefined' ? lastname : '' %>"
              />
            </div>
        </div>
         </div>
         <div class="row">
           <div class="col-lg">
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter Email"
                value="<%= typeof email != 'undefined' ? email : '' %>"
              />
            </div>
           </div>
           <div class="col-lg">
            <div class="form-group">
              <label for="contact">Contact</label>
              <input
                type="text"
                id="contact"
                name="contact"
                class="form-control"
                placeholder="Contact"
                value="<%= typeof contact != 'undefined' ? contact : '' %>"
              />
            </div>
           </div>
         </div>
          <div class="row">
            <div class="col-lg">
              <div class="form-group">
                <label for="password">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Create Password"
                  value="<%= typeof password != 'undefined' ? password : '' %>"
                />
              </div>
            </div>
            <div class="col-lg">
              <div class="form-group">
                <label for="password2">Confirm Password</label>
                <input
                  type="password"
                  id="password2"
                  name="password2"
                  class="form-control"
                  placeholder="Confirm Password"
                  value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 form-group">
              <label for="carMake">Car Make</label>
              <input type="text" id="carMake" name="carMake" class="form-control" placeholder="Enter Name"
                value="<%= typeof carMake != 'undefined' ? carMake : '' %>"/>
            </div>
            <div class="col-md-6 form-group">
              <label for="model">Vehicle Model</label>
              <input type="text" id="model" name="model" class="form-control" value="<%= typeof model != 'undefined' ? model : '' %>"/>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="year">Production Year</label>
                <input type="text" id="year" name="year" class="form-control" placeholder="2021"
                  value="<%= typeof year != 'undefined' ? year : '' %>"/>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="vin">VIN No</label>
                <input type="text" id="vin" name="vin" class="form-control" placeholder="Enter Email" value="<%= typeof vin != 'undefined' ? vin : '' %>"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="address" name="address" class="form-control" placeholder="Enter Email"
                  value="<%= typeof address != 'undefined' ? address : '' %>"/>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="location">Location</label>
                <input type="text" id="location" name="location" class="form-control" placeholder="Location" value="<%= typeof location != 'undefined' ? location : '' %>"
                />
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary mt-3 w-100">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a class="text-decoration-none" href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
</div>